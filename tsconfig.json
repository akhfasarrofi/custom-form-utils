{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "dist", "playground"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ],
}
